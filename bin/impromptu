#!/usr/bin/env bash
if [[ -z "$IMPROMPTU_BIN" || ! -d "$IMPROMPTU_BIN" ]]; then
  export IMPROMPTU_BIN="$HOME/.impromptu/node_modules/impromptu/bin"
fi

build_prompt="$IMPROMPTU_BIN/impromptu-prompt"
if [ -f "$build_prompt" ]; then
  source $build_prompt
else
  printf "Unable to find Impromptu.\n$ "
fi
